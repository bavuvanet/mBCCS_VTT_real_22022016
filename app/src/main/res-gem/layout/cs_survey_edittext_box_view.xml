<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/standard.spacing_small"
        android:layout_marginTop="@dimen/standard.spacing_small"
        android:layout_marginRight="@dimen/standard.spacing_small"
        android:textColor="@color/black"
        android:textSize="@dimen/text_survey_content" />

    <LinearLayout
        android:id="@+id/boxInput"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>
