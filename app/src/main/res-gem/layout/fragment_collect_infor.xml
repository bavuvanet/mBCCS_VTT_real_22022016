<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#0488D1">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:background="@drawable/bg_press_collect_infor_icon"
            android:padding="16dp"
            android:src="@drawable/md_nav_back" />

        <TextView
            style="@style/commonTextBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/thu_thap_thong_tin"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView22"
        style="@style/commonTextNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Tìm kiếm thông tin"
        android:textColor="#686868"
        android:visibility="gone"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/padding_relaback"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/commonTextNormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Số giấy tờ:"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/number_exhibit_edt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.3"
            android:maxLength="30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/padding_relaback"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/commonTextNormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sđt / Account:"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/number_acc_edt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.3"
            android:maxLength="30" />
    </LinearLayout>

    <Button
        android:id="@+id/check_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginTop="@dimen/padding_relaback"
        android:background="@drawable/bg_press_collect_infor"
        android:textAllCaps="true"
        android:text="@string/check_btn"
        android:textColor="@android:color/white" />

</LinearLayout>
