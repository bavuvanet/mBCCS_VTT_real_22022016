<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_gem_common_round_white"
        android:orientation="vertical"
        android:paddingBottom="43dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_gem_common_close"
            android:visibility="visible"
            android:layout_alignParentRight="true"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tv_title"
            style="@style/commonTextBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/thong_bao"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginTop="28dp"/>
    </RelativeLayout>





        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center"
            android:paddingBottom="30dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="30dp"
            android:text="@string/khong_tim_thay_thong_tin_khach_hang"
            android:textColor="#605e60"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="100dp"
                android:layout_height="34dp"
                android:background="@drawable/bg_press_collect_cancel"
                android:text="@string/huy"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/add_btn"
                android:layout_width="100dp"
                android:layout_height="34dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/bg_press_collect_add"
                android:text="@string/them_moi"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
