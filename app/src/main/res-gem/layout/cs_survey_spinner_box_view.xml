<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/boxSpinner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard.spacing_small"
        android:layout_marginTop="@dimen/standard.spacing_small"
        android:layout_marginRight="@dimen/standard.spacing_small">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imvAdd"
            android:textColor="@color/black"
            android:textSize="@dimen/text_survey_content" />

        <ImageView
            android:id="@+id/imvAdd"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_plus_blue" />
    </RelativeLayout>

</LinearLayout>
