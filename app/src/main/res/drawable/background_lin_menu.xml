<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="#ffffff" />

            <corners android:radius="5px" />

            <gradient android:endColor="#c7e1eb" android:startColor="#c7e1eb" />
        </shape></item>
    <item android:state_pressed="false"><shape android:shape="rectangle">
            <solid android:color="#ffffff" />

            <corners android:radius="5px" />

            <gradient android:endColor="@android:color/transparent" android:startColor="@android:color/transparent" />
        </shape></item>

</selector>