<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:orientation="vertical" >
    
     <TextView
        android:id="@+id/tvChooseChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/button_normal_background"
        android:text="@string/goods_stock"
        android:textColor="#11A9AA"
        android:textSize="@dimen/text_size_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="#D4D4D4" />
    
    <TextView
        android:id="@+id/tvStaffName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_normal_background"
        android:textColor="@color/red"
        android:textSize="@dimen/text_size_sale_content" />
    
    
    <TextView
        android:id="@+id/tvStaffCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_normal_background"
        android:textColor="@color/red"
        android:textSize="@dimen/text_size_sale_content" />

    <LinearLayout
        android:id="@+id/lnStockModel"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="@dimen/margin_text_5"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_title_layout"
            android:background="@color/colorPrimary"
            android:gravity="center" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/line_button_color" />

            <TextView
                android:id="@+id/tvStockModelCode1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/tv_stock_name"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_content"
                android:textStyle="bold" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line_button_color" />

            <TextView
                android:id="@+id/tvQuantityIssue"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/tv_slDapUng"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_content"
                android:textStyle="bold" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line_button_color" />
            
            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/tv_slThucTe"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_content"
                android:textStyle="bold" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line_button_color" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#00897b" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#D4D4D4" />

                <ListView
                    android:id="@+id/lvStockModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_lv" >
                </ListView>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#D4D4D4" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D4D4D4" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top"
        android:gravity="center"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>