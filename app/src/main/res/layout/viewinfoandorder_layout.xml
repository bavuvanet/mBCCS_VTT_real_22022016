<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical|center_horizontal"
  	 >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.5"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtsumhamuc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView1"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Tổng hạn mức : "
                android:textSize="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:text="Còn lại : "
                android:textSize="10dp" />

            <TextView
                android:id="@+id/txtconlai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView2"
                android:textSize="10dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.5"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtgiatritrongkho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView3"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Giá trị  trong kho : "
                android:textSize="10dp" />

        </RelativeLayout>

      
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.5"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtgiatrihangdat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView5"
                android:textColor="@color/red"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Giá trị hàng đặt : "
                android:textSize="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="right|center_horizontal"
            android:orientation="horizontal" >
            <TextView 
                android:id="@+id/texstockodercode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="10sp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service" />

        <Spinner
            android:id="@+id/spindichvu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_spinner"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

	<LinearLayout
        android:id="@+id/lnStockModel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tvStockModelCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:ems="8"
                android:text="Loại hàng"
                android:textSize="@dimen/text_size_nomal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvQuantityIssue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1.4"
           
                android:lines="3"
                android:text="Kho cá nhân và cấp trên"
                android:textSize="@dimen/text_size_nomal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvQuantitySaling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_text_5"
                android:layout_weight="1.4"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="Số lượng đặt"
                android:textSize="@dimen/text_size_nomal"
                android:textStyle="bold" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/listdataviewinforder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_text_5" >
                </ListView>
            </LinearLayout>

        </LinearLayout>
      <LinearLayout
        android:id="@+id/lnButton"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_lin_layout_channel_manager"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnxemhangdadat"
            android:layout_width="@dimen/button_width_extra"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/button_cancle_background"
            android:text="@string/DSitemorder"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_title" />

        <Button
            android:id="@+id/btndathang"
            android:layout_width="@dimen/button_width_extra"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:background="@drawable/button_cancle_background"
            android:text="Đặt hàng"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_title" />
    </LinearLayout>
  	  <LinearLayout
        android:id="@+id/listbutonCacel"
        android:layout_width="match_parent"
    	android:visibility="gone"
        android:layout_height="@dimen/height_lin_layout_channel_manager"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal" >

       		 <Button
            android:id="@+id/btncancelitem"
            android:layout_width="@dimen/button_height_button"
            android:layout_height="@dimen/button_height"    
            android:background="@drawable/button_cancle_background"
            android:text="Huỷ"   
            android:textColor="#fff"
            android:textSize="@dimen/text_size_title" />

        	<Button
            android:id="@+id/btnreorder"
            android:layout_width="@dimen/button_height_button"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="@dimen/activity_vertical_margin_button"
            android:background="@drawable/button_cancle_background"
            android:gravity="center"
            android:text="Đặt lại"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_title" />
				
        	<Button
            android:id="@+id/btnxemhangdadat2"
            android:layout_width="@dimen/button_height_button"    
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="@dimen/activity_vertical_margin_button"
            android:background="@drawable/button_cancle_background"
            android:text="DS đã đặt"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_title" />
    </LinearLayout>

</LinearLayout>