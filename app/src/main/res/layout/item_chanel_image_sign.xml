<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:orientation="horizontal"
    android:padding="@dimen/padding_bottom" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/nameDiemBan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Hình ảnh điểm bán DFFF" />

        <TextView
            android:id="@+id/txteror"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Bạn chưa cập nhật ảnh cho danh mục"
            android:textColor="@color/red"
            android:textSize="10sp"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageDiemban"
        android:layout_width="@dimen/width_imv"
        android:layout_height="@dimen/height_imv"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/logo_vt"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/btndelete"
        android:layout_width="@dimen/button_height"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/button_normal_background"
        android:filterTouchesWhenObscured="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/imgdelete"
            android:layout_width="@dimen/icon_inner_width"
            android:layout_height="@dimen/icon_inner_width"
            android:scaleType="fitXY"
            android:src="@drawable/delete" />
    </LinearLayout>

</LinearLayout>