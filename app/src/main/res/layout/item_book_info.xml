<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_dat_lich_hen"
        android:textColor="@color/textDialogTitle"
        android:textSize="@dimen/text_size_header" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
         />

    <EditText
            android:id="@+id/dateBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           	android:layout_marginTop="@dimen/text_size_20"
            android:layout_weight="1"
            android:clickable="true"
            android:cursorVisible="false"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/calendar_07"
            android:editable="false"
            android:focusableInTouchMode="false"
            android:layout_gravity="center"            
            android:longClickable="false"
            android:text="20/02/1990 22:10:10"            
            android:textSize="@dimen/text_size_15" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginTop="@dimen/text_size_20"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnDongY"
            android:layout_width="@dimen/button_width_extra"
            android:layout_height="@dimen/button_height_litter"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"

            android:filterTouchesWhenObscured="true"
            android:text="@string/ok"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_content" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="@dimen/button_width_extra"
            android:layout_height="@dimen/button_height_litter"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"            

            android:filterTouchesWhenObscured="true"
            android:text="@string/cancel"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_content" />       
    </LinearLayout>   
</LinearLayout>