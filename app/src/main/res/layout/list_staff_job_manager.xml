<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_text_1"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/margin_text_1"
        android:text="@string/text_list_staff_job_manager"
        android:textColor="@color/text_nomal"
        android:textSize="@dimen/text_size_nomal" />

    <EditText
        android:id="@+id/searchStaff"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/text"
        android:layout_marginTop="@dimen/margin_text_1"
        android:hint="@string/contentSearch"
        android:textSize="@dimen/text_size_nomal" />

    <ListView
        android:id="@+id/lv_staff_job_manager"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/searchStaff"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin" >
    </ListView>

    <TextView
        android:id="@+id/sms11"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_height_l"
        android:gravity="center"
        android:layout_below="@+id/searchStaff"
        android:text="@string/notStaff"
        android:visibility="visible" />
</RelativeLayout>