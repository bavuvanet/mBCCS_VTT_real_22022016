<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_lin_layout_channel_manager"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/spTaskItem"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtNameSalePoint"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/text_title"
            android:textSize="@dimen/text_size_title" />

        <TextView
            android:id="@+id/txtCountSalePoint"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/text_nomal"
            android:textSize="@dimen/text_size_title" />

        <TextView
            android:id="@+id/txtCountMoneySalePoint"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/text_nomal"
            android:textSize="@dimen/text_size_title" />
    </LinearLayout>
    <Spinner
        android:id="@+id/spTaskItem"
        android:layout_width="@dimen/width_spinner_item_1"
        android:layout_toLeftOf="@+id/cbSalePoint"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_height="@dimen/height_spinner_item" />

    <CheckBox
        android:id="@+id/cbSalePoint"
        android:layout_width="@dimen/size_checkbox"
        android:layout_height="@dimen/size_checkbox"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_text_1"
        android:focusable="false"
        android:layout_marginRight="@dimen/margin_text_1"
        android:gravity="center" />

</RelativeLayout>