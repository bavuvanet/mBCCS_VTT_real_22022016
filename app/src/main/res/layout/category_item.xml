<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvconectorcode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="0.13"
            android:ems="10"
            android:gravity="left|center_vertical"
            android:paddingLeft="5dp"
            android:text="hhhhhhhhhhhhhhhhhhhhhhh" />

        <View
            android:id="@+id/view1"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#C7C7C0" />

        <TextView
            android:id="@+id/tvvalue"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:ems="16"
            android:gravity="left|center_vertical"
            android:text="hhhhhhhhhhhhhhhhhh"
            android:textColor="@color/red"
            android:visibility="visible" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#C7C7C0" />

        <LinearLayout
            android:id="@+id/imgAdd"
            android:layout_width="@dimen/button_delete_height"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/button_normal_background"
            android:filterTouchesWhenObscured="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/icon_inner_width"
                android:layout_height="@dimen/icon_inner_width"
                android:scaleType="fitXY"
                android:src="@drawable/add" />
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#C7C7C0" />

        <LinearLayout
            android:id="@+id/imgDelete"
            android:layout_width="@dimen/button_delete_height"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/button_normal_background"
            android:filterTouchesWhenObscured="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/icon_inner_width"
                android:layout_height="@dimen/icon_inner_width"
                android:scaleType="fitXY"
                android:src="@drawable/delete" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/view_size"
        android:layout_alignParentBottom="true"
        android:background="@color/color_view" />

</RelativeLayout>