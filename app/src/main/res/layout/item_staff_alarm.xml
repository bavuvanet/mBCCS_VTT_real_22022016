<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="10dp">

	<TextView
		android:id="@+id/tv_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="[Ten Canh Bao]"
		android:textSize="18sp"
		android:textStyle="bold"/>

	<TextView
		android:id="@+id/tv_code"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="[Ma chi tieu]"/>

	<TextView
		android:id="@+id/tv_time_start"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/alarm_time_start"/>

	<TextView
		android:id="@+id/tv_time_accrued"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/alarm_time_accrued"/>

	<TextView
		android:id="@+id/tv_time_nok"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/alarm_time_nok"/>

	<TextView
		android:id="@+id/tv_content"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:lines="1"
		android:text="@string/alarm_content"/>
</LinearLayout>