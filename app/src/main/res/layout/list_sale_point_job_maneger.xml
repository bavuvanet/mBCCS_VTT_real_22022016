<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/txtNameListSalePoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_text_1"
        android:layout_marginTop="@dimen/margin_text_1"
        android:text="@string/text_list_staff_job_manager"
        android:textColor="@color/text_nomal"
        android:textSize="@dimen/text_size_nomal" />

    <ListView
        android:id="@+id/lvSalePoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linButton"
        android:layout_below="@+id/txtNameListSalePoint"
        android:cacheColorHint="@android:color/transparent" >
    </ListView>

    <LinearLayout
        android:id="@+id/linButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/margin_text_1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnAssignment"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginRight="@dimen/margin_text_1"
            android:layout_weight="1"
            android:background="@drawable/background_button_green"
            android:text="@string/assignment"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_title" />

        <Button
            android:id="@+id/btnShowRoute"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="@dimen/margin_text_1"
            android:layout_weight="1"
            android:background="@drawable/background_button_green"
            android:text="@string/show_route"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_title" />
    </LinearLayout>

</RelativeLayout>