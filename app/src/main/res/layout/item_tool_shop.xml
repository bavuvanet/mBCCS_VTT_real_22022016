<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".DemoCameraActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_20" >

        <TextView
            android:id="@+id/tv_tool_shop_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="left"
            android:padding="@dimen/padding_text_5"
            android:textSize="@dimen/text_size_nomal" />

        <View
            android:layout_width="@dimen/view_size"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/padding_text_5"
            android:background="@color/color_view" />

        <TextView
            android:id="@+id/txt_number_tool_shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.58"
            android:gravity="center"
            android:padding="@dimen/padding_text_5"
            android:textSize="@dimen/text_size_nomal" />
    </LinearLayout>

</LinearLayout>