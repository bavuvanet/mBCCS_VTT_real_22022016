<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cell_shape"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_stockModelCodeName"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mặt hàng: PX1234"
            android:textSize="@dimen/text_size_content"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/cb_selectGoods"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_serial"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Serial: 123132121"
            android:textSize="@dimen/text_size_sale_content" />

        <TextView
            android:id="@+id/tv_reclaimPayMethodName"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hình thức: 123.456.789"
            android:textSize="@dimen/text_size_sale_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_serialToRetrieve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/serialToRetrieve"
            android:textSize="@dimen/text_size_sale_content" />

        <EditText
            android:id="@+id/edt_serialToRetrieve"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_sale_content" />
    </LinearLayout>

</LinearLayout>