<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >
	<ListView
		android:id="@+id/lv_list_charge_customer_search"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/layout_commit"
		android:layout_alignParentTop="true" >
	</ListView>
	<LinearLayout
		android:id="@+id/layout_commit"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_marginTop="10dp"
		android:orientation="horizontal"
		android:padding="4dp" >
		<Spinner
			android:id="@+id/spinner_employee"
			android:layout_width="0dp"
			android:layout_height="@dimen/button_height"
			android:layout_weight="@integer/d2"
		 />
		<Button
			android:id="@+id/btn_commit"
			android:layout_width="0dp"
			android:layout_height="@dimen/button_height"
			android:layout_gravity="right"
			android:layout_marginLeft="2dp"
			android:layout_weight="@integer/d5"
			android:textColor="@color/white"

        	android:filterTouchesWhenObscured="true"
			android:text="@string/charge_commit"
			/>
	</LinearLayout>
</RelativeLayout>