<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_wholeRow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cell_shape_thin"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_saleServiceModelName"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape_thin"
            android:padding="1dip"
            android:text="Loại mặt hàng: ĐT"
            android:textSize="@dimen/text_size_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_stockModelCodeName"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape_thin"
            android:padding="1dip"
            android:text="Mặt hàng: PX1234fas1df31s32d1f2s3d1fs32df1"
            android:textSize="@dimen/text_size_content"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_supplyMethod"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape_thin"
            android:padding="1dip"
            android:text="Hình thức: 123132121"
            android:textSize="@dimen/text_size_sale_content" />

        <TextView
            android:id="@+id/tv_supplyProgram"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape_thin"
            android:padding="1dip"
            android:text="Chương trình: ggg"
            android:textSize="@dimen/text_size_sale_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_programMonth"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape_thin"
            android:padding="1dip"
            android:text="Số tháng: 12"
            android:textSize="@dimen/text_size_sale_content" />

        <TextView
            android:id="@+id/tv_payAmount"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape_thin"
            android:padding="1dip"
            android:text="Số tiền: 55555"
            android:textSize="@dimen/text_size_sale_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_payMethod"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape_thin"
            android:padding="1dip"
            android:text="Hình thức TT"
            android:textSize="@dimen/text_size_sale_content" />

        <TextView
            android:id="@+id/tv_serial"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape_thin"
            android:padding="1dip"
            android:text="Serial: 55555"
            android:textSize="@dimen/text_size_sale_content" />
    </LinearLayout>

</LinearLayout>