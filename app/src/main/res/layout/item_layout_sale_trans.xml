<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/button_height_l"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_s"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="@dimen/view_size"
            android:layout_height="@dimen/button_height_s"
            android:background="@color/color_view" />
        <TextView
            android:id="@+id/txt_date_sale"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_s"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000" />

        <View
            android:layout_width="@dimen/view_size"
            android:layout_height="@dimen/button_height_s"
            android:background="@color/color_view" />

        <TextView
            android:id="@+id/txt_amout_tax"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_s"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/text_nomal" />
        <View
            android:layout_width="@dimen/view_size"
            android:layout_height="@dimen/button_height_s"
            android:background="@color/color_view" />
    </LinearLayout>

</LinearLayout>