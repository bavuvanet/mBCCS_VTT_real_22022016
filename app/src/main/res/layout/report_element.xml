<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin2"
    android:layout_width="match_parent"
    android:layout_height="@dimen/table_height"
    android:layout_gravity="center_vertical"
    android:background="@drawable/background_show_data"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="@dimen/table_height"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:padding="@dimen/margin_text_1"
        android:textSize="@dimen/text_size_nomal" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/table_row_line" />

    <TextView
        android:id="@+id/txt_total"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="1.5"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="@dimen/text_size_nomal" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/table_row_line" />

    <TextView
        android:id="@+id/txt_unit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="@dimen/text_size_nomal" />

</LinearLayout>