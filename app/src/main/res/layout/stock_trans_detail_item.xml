<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_lin_layout_channel_manager"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvStockModelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The cao MG50"
        android:layout_marginLeft="@dimen/margin_text_1"
        android:layout_marginRight="@dimen/margin_text_1"
        android:layout_marginTop="@dimen/margin_text_1"
        android:gravity="left"
        android:textSize="@dimen/text_size_content"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_text_1"
        android:layout_marginRight="@dimen/margin_text_1"
        android:layout_marginTop="@dimen/margin_text_1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvStockModelCode"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TC050"
            android:textSize="@dimen/text_size_content_list" />

        <TextView
            android:id="@+id/tvStockModelState"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hang moi"
            android:textSize="@dimen/text_size_content_list" />

        <TextView
            android:id="@+id/tvStockModelQuantity"
            android:layout_width="0dip"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="50 the"
            android:textSize="@dimen/text_size_content_list" />
    </LinearLayout>

</LinearLayout>