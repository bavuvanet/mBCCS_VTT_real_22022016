<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.01"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvitemcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã Hàng: "
            android:textSize="@dimen/text_size_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvtenhang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mặt hàng: "
            android:textSize="@dimen/text_size_content" />

        <TextView
            android:id="@+id/tvserialRetryRevoke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_text_1"
            android:text="Serial cần thu hồi: "
            android:textSize="@dimen/text_size_content" />

        <TextView
            android:id="@+id/tvSerialRevoke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_text_1"
            android:text="Serial thu hồi: "
            android:textSize="@dimen/text_size_content" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:layout_gravity="center_vertical|center_horizontal"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <LinearLayout
        android:id="@+id/btndelete"
        android:layout_width="@dimen/button_height"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/button_normal_background"
        android:filterTouchesWhenObscured="true"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgdelete"
            android:layout_width="@dimen/icon_inner_width"
            android:layout_height="@dimen/icon_inner_width"
            android:scaleType="fitXY"
            android:src="@drawable/delete" />
    </LinearLayout>

</LinearLayout>