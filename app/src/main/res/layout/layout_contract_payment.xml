<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_left"
    android:paddingRight="@dimen/padding_right" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/edt_bill_cycle"
            android:textSize="@dimen/text_size_content" />

        <EditText
            android:id="@+id/edt_applied_cycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:cursorVisible="false"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/calendar_07"
            android:editable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:longClickable="false"
            android:text=""
            android:textSize="@dimen/text_size_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_content"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/level_money_not_required"
            android:textSize="@dimen/text_size_content" />

        <EditText
            android:id="@+id/edtFromMoney"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp50"
            android:layout_weight="1"
            android:inputType="number"
            android:hint="@string/from_money" />

        <EditText
            android:id="@+id/edtToMoney"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp50"
            android:layout_weight="1"
            android:inputType="number"
            android:hint="@string/to_money" />

        <Spinner
            android:id="@+id/spn_bill"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_gravity="left|center_vertical|center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:drawSelectorOnTop="true"
            android:entries="@array/payment_bill"
            android:entryValues="@array/payment_bill_value"
            android:hint="@string/select_acc_charge"
            android:singleLine="true"
            android:textSize="@dimen/text_size_content"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/trangthai"
            android:textSize="@dimen/text_size_content" />

        <Spinner
            android:id="@+id/spn_payment_status"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_gravity="left|center_vertical|center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawSelectorOnTop="true"
            android:entries="@array/payment_status"
            android:entryValues="@array/payment_status_value"
            android:hint="@string/select_acc_charge"
            android:singleLine="true"
            android:textSize="@dimen/text_size_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnObjectCus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_item_menu"
            android:gravity="center_vertical"
            android:text="@string/edt_customer_code"
            android:textSize="@dimen/text_size_content" />

        <EditText
            android:id="@+id/edtObjectCus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="3dp"
            android:clickable="true"
            android:cursorVisible="false"
            android:drawablePadding="2dp"
            android:editable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:longClickable="false"
            android:maxLines="6"
            android:text=""
            android:textSize="@dimen/text_size_content" />
    </LinearLayout>

    <Button
        android:id="@+id/imb_search_contract_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"

        android:filterTouchesWhenObscured="true"
        android:text="@string/search"
        android:textColor="#fff"
        android:textSize="@dimen/text_size_content" />
    
     <LinearLayout
        android:id="@+id/lnCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_item_menu"
            android:gravity="center_vertical"
            android:text="@string/sohopdong"
            android:textSize="@dimen/text_size_content" />

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="3dp"
            android:clickable="true"
            android:drawablePadding="2dp"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:longClickable="false"
            android:text=""
            android:textSize="@dimen/text_size_content" />
    </LinearLayout>

</LinearLayout>