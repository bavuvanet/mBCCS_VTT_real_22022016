<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
	<View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/table_row_line" />
    <TextView
        android:id="@+id/tvmaten"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:paddingLeft="@dimen/padding_left"
        android:gravity="left|center_vertical"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="Ha quang thinh"
        android:scrollbars="vertical"
        android:textSize="@dimen/text_size_nomal" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/table_row_line" />

    <TextView
        android:id="@+id/tvloaidiemban"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:paddingLeft="@dimen/padding_left"
        android:gravity="left|center_vertical"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="diem ban 1"
        android:scrollbars="vertical"
        android:textSize="@dimen/text_size_nomal" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/table_row_line" />

    <TextView
        android:id="@+id/tvdiachi"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.2"
        android:paddingLeft="@dimen/padding_left"
        android:gravity="left|center_vertical"
        android:scrollbars="vertical"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="Nguyên xá - hà nội"
        android:textSize="@dimen/text_size_nomal" />
     <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/table_row_line" />

    <TextView
        android:id="@+id/tvcsgannhat"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:paddingLeft="@dimen/padding_left"
        android:gravity="left|center_vertical"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="09/01/2015"
        android:textSize="@dimen/text_size_nomal" />
    
	<View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/table_row_line" />
</LinearLayout>