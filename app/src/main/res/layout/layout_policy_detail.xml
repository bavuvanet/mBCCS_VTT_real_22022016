<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/txt_policy_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="@string/text_3_layout_channel_manager"
        android:textColor="@color/textColorVT"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/txt_policy_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="yyy"
        android:textColor="#f00" />
    <TextView
        android:id="@+id/txt_policy_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/button_height_w"
        android:padding="4dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout
            android:id="@+id/layout_btn_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/btn_img"
                android:filterTouchesWhenObscured="true"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_width"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/view_img1"
                android:scaleType="fitXY" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_btn_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/btn_video"
                android:filterTouchesWhenObscured="true"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_width"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/view_video"
                android:scaleType="fitXY" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>