<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linThongtindonhang"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imvIconManager"
        android:layout_width="@dimen/icon_width_layout_channel_manager"
        android:layout_height="@dimen/icon_height_layout_channel_manager"
        android:scaleType="centerInside"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/txtNameManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_text_5"
            android:singleLine="true"
            android:text="@string/text_2_layout_channel_manager"
            android:textColor="@color/text_title"
            android:textSize="@dimen/text_size_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/txtbacklog1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_text_5"
                android:text="123"
                android:hint="@string/co"
                android:textSize="@dimen/text_size_13" />
            <TextView
                android:id="@+id/txtbacklog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_text_1"
                android:layout_weight="1"
                android:text="10"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_13" />
            <TextView
                android:id="@+id/txtbacklog2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_text_1"
                android:layout_weight="1"
                android:text="123"
                android:hint="@string/cvquahan"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/txtterm1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_text_5"
                android:layout_weight="1"
                android:text="121212"
                android:hint="@string/co"
                android:textSize="@dimen/text_size_13" />
            <TextView
                android:id="@+id/txtterm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_text_1"
                android:layout_weight="1"                
                android:text="121212"
                android:textColor="@color/list_background_pressed_vt"
                android:textSize="@dimen/text_size_13" />
            <TextView
                android:id="@+id/txtterm2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_text_1"
                android:layout_weight="1"
                android:text="121212"
                android:hint="@string/cvsaptoihan"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_notification_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/notification_background"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="@dimen/text_size_title"
        android:textStyle="bold" />
</LinearLayout>