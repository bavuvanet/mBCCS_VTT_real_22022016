<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_liquidation_recovery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/backgroundItem"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_5"
    android:weightSum="16">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_text_5"
        android:layout_marginRight="@dimen/margin_text_5"
        android:layout_weight="15"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounder_corner"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_5">

                    <LinearLayout
                        android:id="@+id/infoAcc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="@string/infoAccount"
                            android:textSize="@dimen/text_size_13_5" />

                        <TextView
                            android:id="@+id/txtIsdn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:gravity="center_horizontal|center_vertical"
                            android:textSize="@dimen/text_size_13_5"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_choose_function"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="@string/choose_function"
                            android:textSize="@dimen/text_size_13_5"
                            android:textStyle="bold" />


                        <EditText
                            android:id="@+id/editSelectFunction"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:editable="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/chooseAction"
                            android:longClickable="false"
                            android:textColor="@color/blue"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/rounder_corner"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_5">

                    <LinearLayout
                        android:id="@+id/table_contract"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_contract"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10"
                            android:text="@string/contractInfo"
                            android:textColor="@color/textDialogTitle"
                            android:textSize="@dimen/text_size_13_5"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/backgroundItem" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtTTContractCode"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="14"
                                android:gravity="center_vertical|left"
                                android:text="@string/idContract"
                                android:textSize="@dimen/text_size_13_5"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="2dp"
                                android:layout_height="match_parent"
                                android:background="@color/backgroundItem" />

                            <TextView
                                android:id="@+id/txtTTsignDate"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:gravity="center_vertical|left"
                                android:text="@string/dateSigned"
                                android:textSize="@dimen/text_size_13_5"
                                android:textStyle="bold" />

                        </TableRow>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/backgroundItem" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/txtContractNo"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="14"
                                android:gravity="center_horizontal|left"
                                android:textSize="@dimen/text_size_13_5" />

                            <View
                                android:layout_width="2dp"
                                android:layout_height="match_parent"
                                android:background="@color/backgroundItem" />

                            <TextView
                                android:id="@+id/txtDate"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:gravity="center_horizontal|left"
                                android:textSize="@dimen/text_size_13_5" />


                        </TableRow>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/backgroundItem" />


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/notifi_choose"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/notify_choose_sub"
                                android:textColor="@color/textDialogTitle"
                                android:visibility="gone" />
                        </TableRow>

                        <LinearLayout
                            android:id="@+id/showSubscriber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/backgroundItem" />

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="10"
                                    android:gravity="center_vertical"
                                    android:text="@string/sothuebao"
                                    android:textSize="@dimen/text_size_13_5"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/backgroundItem" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:gravity="center_vertical"
                                    android:text="@string/dichvu"
                                    android:textSize="@dimen/text_size_13_5"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/backgroundItem" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:gravity="center_vertical"
                                    android:text="@string/liquidationInfo"
                                    android:textSize="@dimen/text_size_13_5"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/backgroundItem" />

                                <TextView
                                    android:layout_width="35dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="0"
                                    android:gravity="center_vertical"
                                    android:text="@string/chon"
                                    android:textSize="@dimen/text_size_13_5"
                                    android:textStyle="bold" />


                            </TableRow>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/backgroundItem" />

                            <ListView
                                android:id="@+id/lv_subscriber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subLiquidationGoodsList"
                    android:textColor="@color/textDialogTitle"
                    android:textSize="@dimen/text_size_13_5"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/tableGood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounder_corner"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_5"
                    android:visibility="gone"
                    android:weightSum="33">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:gravity="center_horizontal|left"
                            android:text="@string/idProduct"
                            android:textSize="@dimen/text_size_13_5"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/backgroundItem" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="12"
                            android:gravity="center_horizontal|left"
                            android:text="@string/txtProductName"
                            android:textSize="@dimen/text_size_13_5"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/backgroundItem" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:gravity="center_horizontal|left"
                            android:text="@string/serialNoSpace"
                            android:textSize="@dimen/text_size_13_5"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/backgroundItem" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:textSize="@dimen/text_size_13_5"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/backgroundItem" />

                        <CheckBox
                            android:id="@+id/CbCheckAllSubGood"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/backgroundItem" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ListView
                            android:id="@+id/lvProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </TableRow>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/rounder_corner"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_5">

                    <LinearLayout
                        android:id="@+id/layout_choose_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.12"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="@string/choose_reason_zone"
                            android:textSize="@dimen/text_size_13_5"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinSelectReason"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:editable="false"
                            android:focusableInTouchMode="false"
                            android:longClickable="false"
                            android:textColor="@color/blue"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TableLayout
                        android:id="@+id/tableFee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background"
                        android:paddingTop="@dimen/margin_10"
                        android:visibility="gone">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/blue"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="@string/typeFee"
                                android:textSize="@dimen/text_size_13_5"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/background" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="@string/moneyUnit"
                                android:textSize="@dimen/text_size_13_5"
                                android:textStyle="bold" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/background" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/background">

                            <ListView
                                android:id="@+id/lvFee"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_weight="15" />
                        </TableRow>


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/blue">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="@string/tv_amount"
                                android:textSize="@dimen/text_size_13_5"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/background" />

                            <TextView
                                android:id="@+id/txt_totalFee"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_horizontal|center_vertical"
                                android:textSize="@dimen/text_size_13_5"
                                android:textStyle="bold" />

                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnRun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/margin_5"
            android:text="@string/btn_apply"
            android:textColor="@color/background" />
    </LinearLayout>
</LinearLayout>



