<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_list_sale_point"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/txtNameListSalePoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_text_1"
        android:layout_marginTop="@dimen/margin_text_1"
        android:text="@string/text_list_staff_job_manager"
        android:textColor="@color/text_nomal"
        android:textSize="@dimen/text_size_nomal" />

    
    <EditText
        android:id="@+id/searchStaff"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/txtNameListSalePoint"
        android:layout_marginTop="@dimen/margin_text_1"
        android:hint="@string/contentSearch"
        android:textSize="@dimen/text_size_nomal" />

    <ListView
        android:id="@+id/lvSalePoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchStaff"
        android:cacheColorHint="@android:color/transparent" >
    </ListView>

    <TextView
        android:id="@+id/sms11"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_height_l"
        android:layout_below="@+id/searchStaff"
        android:gravity="center"
        android:text="@string/notStaff"
        android:visibility="gone" />
</RelativeLayout>