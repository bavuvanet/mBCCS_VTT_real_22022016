<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:gravity="left|center_vertical"
            android:text="@string/orderid" />

        <TextView
            android:id="@+id/txtorderid"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:textColor="@color/red" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:gravity="left|center_vertical"
            android:text="@string/nameorderid" />

        <TextView
            android:id="@+id/txtnameorderid"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:gravity="left|center_vertical"
            android:text="@string/timeorder" />

        <TextView
            android:id="@+id/txttimeorder"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvStockModelCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:ems="8"
            android:gravity="center_vertical|center_horizontal"
            android:text="Loại hàng"
            android:textSize="@dimen/text_size_nomal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvQuantityIssue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
             android:layout_marginLeft="@dimen/margin_text_5"
            android:lines="3"
            android:text="Kho cấp trên"
            android:textSize="@dimen/text_size_nomal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvQuantitySaling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="@dimen/margin_text_5"
            android:layout_weight="1.4"
            android:gravity="center_vertical|center_horizontal"
            android:text="Số lượng đặt"
            android:textSize="@dimen/text_size_nomal"
            android:textStyle="bold" />
    </LinearLayout>
    <ListView
        android:id="@+id/listcontactorder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

    </ListView>

    <LinearLayout
        android:id="@+id/lnButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_lin_layout_channel_manager"
        android:gravity="center_horizontal|center_vertical"
        android:layout_gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnduyetdonhang"
            android:layout_width="@dimen/button_width_extra"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/button_cancle_background"
            android:text="@string/duyetdonhang"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_title" />

        <Button
            android:id="@+id/btnhuydonhang"
            android:layout_width="@dimen/button_width_extra"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:background="@drawable/button_cancle_background"
            android:text="@string/refuseOrder"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_title" />
    </LinearLayout>

</LinearLayout>