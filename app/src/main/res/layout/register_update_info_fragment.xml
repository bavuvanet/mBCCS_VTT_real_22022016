                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv8"
                    android:background="@drawable/bg_textview"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:paddingLeft="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv9"
                    android:layout_width="@dimen/width_register_info"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/tv_phuong_xa" />

                <EditText
                    android:id="@+id/edtNgaySinh"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv9"
                    android:background="@drawable/bg_textview"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:paddingLeft="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv15"
                    android:layout_width="@dimen/width_register_info"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/tv_to_thon" />

                <EditText
                    android:id="@+id/edtToDuongSoNha"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv15"
                    android:background="@drawable/bg_textview"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:paddingLeft="10dp" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnUpdateInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:filterTouchesWhenObscured="true"
                android:layout_marginTop="10dp"
                android:text="@string/btn_update_info" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>