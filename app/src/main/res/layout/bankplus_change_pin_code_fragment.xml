<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iml1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/pass_10" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="5dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/iml1">
                <EditText
                    android:id="@+id/edtPinOld"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/old_pin_code"
                    android:inputType="textPassword|numberDecimal"
                    android:password="true"
                    android:digits="0123456789"
                    android:textSize="16dp"
                    android:maxLength="6">
                    <requestFocus />
                </EditText>
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iml2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/pass_10" />
            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="5dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/iml2">
                <EditText
                    android:id="@+id/edtNewPin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/new_pin_code"
                    android:inputType="textPassword|numberDecimal"
                    android:password="true"
                    android:digits="0123456789"
                    android:textSize="16dp"
                    android:maxLength="6" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iml3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/pass_10" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="5dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/iml3">
                <EditText
                    android:id="@+id/edtConfirmPin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/confirm_new_pin_code"
                    android:inputType="textPassword|numberDecimal"
                    android:password="true"
                    android:digits="0123456789"
                    android:textSize="16dp"
                    android:maxLength="6">
                </EditText>
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnChangePin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_s"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/round_button"
        android:textColor="@color/white"
        android:text="@string/bankplus_change_pin"
        android:textSize="@dimen/text_size_title" />
</LinearLayout>