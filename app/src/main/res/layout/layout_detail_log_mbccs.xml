<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnInfoGeneral"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/header"
            android:drawableLeft="@android:drawable/arrow_up_float"
            android:text="@string/title_info_general"
            android:textColor="@color/black"/>


        <com.github.aakira.expandablelayout.ExpandableLinearLayout
            android:id="@+id/expanInfoGeneral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:ael_duration="1"
            app:ael_expanded="true">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingRight="@dimen/margin_10">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="@string/user_call"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tvUserCall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/user_call"
                                android:textStyle="bold"
                                />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingRight="@dimen/margin_10">

                            <TextView
                                android:id="@+id/tvExecuteDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/executeDate"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tvIpServer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/ipServer"
                                />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingRight="@dimen/margin_10">


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingRight="@dimen/margin_10">

                            <TextView
                                android:id="@+id/tvLogMethodResult"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/logMethodResult"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tvLogMethodDuration"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/logMethodDuration"
                                />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvLogMethodClassName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/logMethodClassName"
                            />


                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </com.github.aakira.expandablelayout.ExpandableLinearLayout>

        <Button
            android:id="@+id/btnInputValue"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/header"
            android:drawableLeft="@android:drawable/arrow_up_float"
            android:text="@string/input_value"
            android:textColor="@color/black"/>


        <com.github.aakira.expandablelayout.ExpandableLinearLayout
            android:id="@+id/expanInputValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_5"
            android:paddingTop="@dimen/margin_5"
            app:ael_duration="1"
            app:ael_expanded="true">

            <TextView
                android:id="@+id/tvInputValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"/>
        </com.github.aakira.expandablelayout.ExpandableLinearLayout>


        <Button
            android:id="@+id/btnResultValue"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/header"
            android:drawableLeft="@android:drawable/arrow_up_float"
            android:text="@string/result_value"
            android:textColor="@color/black"/>

        <com.github.aakira.expandablelayout.ExpandableLinearLayout
            android:id="@+id/expanResultValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_5"
            android:paddingTop="@dimen/margin_5"
            app:ael_duration="1"
            app:ael_expanded="true">

            <TextView
                android:id="@+id/tvResultValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:textIsSelectable="true"
                android:layout_marginRight="@dimen/margin_10"/>

        </com.github.aakira.expandablelayout.ExpandableLinearLayout>
    </LinearLayout>
</ScrollView>
