<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="5dp" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tvIsdn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/nhap_so_dien_thoai"
                android:inputType="phone"
                android:maxLength="12"
                android:textColor="@color/green_app"
                android:textSize="@dimen/text_size_14"
                android:textStyle="italic"></EditText>

            <ImageView
                android:id="@+id/imgOk"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/checked" />

            <ImageView
                android:id="@+id/imgFail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/delete_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lnNumCall"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_call_black_24dp" />

                <TextView
                    android:id="@+id/tvNumCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="@dimen/text_size_13_5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnNumSms"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="0.3"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_textsms_black_24dp" />

                <TextView
                    android:id="@+id/tvNumSms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2300"
                    android:textSize="@dimen/text_size_13_5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnLastRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/dfdfd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text="@string/last_"
                    android:textSize="@dimen/text_size_13_5" />

                <TextView
                    android:id="@+id/tvLastCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10/02/2016 23:45:12"
                    android:textSize="@dimen/text_size_13_5" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="0.2dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray_2" />

    <LinearLayout
        android:id="@+id/imgDelete"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@drawable/button_normal_background"
        android:filterTouchesWhenObscured="true"
        android:gravity="center|center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_delete_forever_black_24dp" />
    </LinearLayout>

</LinearLayout>