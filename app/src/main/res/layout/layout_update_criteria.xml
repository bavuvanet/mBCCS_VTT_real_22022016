<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_text_5"
    android:paddingTop="@dimen/padding_text_3" >

    <ListView
        android:id="@+id/lvUpdateCriteria"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btUpdateOU"
        android:layout_alignParentTop="true" >
    </ListView>

    <Button
        android:id="@+id/btUpdateOU"
        android:layout_width="@dimen/button_width_large"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:text="@string/btnUpdate"
        android:textColor="#fff"
        android:filterTouchesWhenObscured="true"
        android:visibility="visible"
        android:textSize="@dimen/text_size_content" />

</RelativeLayout>