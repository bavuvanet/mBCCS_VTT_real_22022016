<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvNumberSearch"
        android:layout_marginTop="@dimen/padding_relaback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/advisory_enter_subscriber_text"/>

    <EditText
        android:id="@+id/edtNumberValue"
        android:layout_marginTop="@dimen/padding_relaback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:digits="0123456789+"
        android:hint="@string/hint_input_sub"
        android:textSize="@dimen/text_size_14" />

    <Button
        android:id="@+id/searchButton"
        android:layout_marginTop="@dimen/padding_relaback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="@string/advisory_search_text" />
</LinearLayout>