

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:background="@color/list_background_pressed_vt">
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_title" 
            android:text="@string/change_pass"/>
    </LinearLayout>
    

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iml1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/account_07" />

            <EditText
                android:id="@+id/edtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/iml1"
                android:hint="@string/user_name"
                android:paddingLeft="5dp"
                android:maxLength="50"
                android:textSize="@dimen/text_size_14"
                android:singleLine="true"
                android:textStyle="italic"
              />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iml2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/pass_10" />

            <EditText
                android:id="@+id/edtOldPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/iml2"
                android:hint="@string/old_password"
                android:inputType="textPassword"
                 android:maxLength="50"
                android:paddingLeft="5dp"
                android:textSize="@dimen/text_size_14"
                android:textStyle="italic"
                />
        </RelativeLayout>
		  <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iml3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/pass_10" />

            <EditText
                android:id="@+id/edtNewPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/iml3"
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:textSize="@dimen/text_size_14"
                 android:maxLength="50"
                android:paddingLeft="5dp"
                android:textStyle="italic"
                />
        </RelativeLayout>
          <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iml4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/pass_10" />

            <EditText
                android:id="@+id/edtConfirmPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/iml4"
                android:hint="@string/confirm_password"
                 android:maxLength="50"
                android:inputType="textPassword"
                android:textSize="@dimen/text_size_14"
                android:paddingLeft="5dp"
                android:textStyle="italic"
                />
        </RelativeLayout>
      
     
    </LinearLayout>
	  <LinearLayout
	    android:id="@+id/lnButton"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="bottom"
	    android:paddingTop="20dp"
	    android:orientation="horizontal" >

    <Button
        android:id="@+id/btnchangepass"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:layout_weight="1"
        android:text="@string/change_pass"
        android:filterTouchesWhenObscured="true"
        android:background="@color/colorAccent"
        android:textColor="#fff"
        android:textSize="@dimen/text_size_title" />

    <View
        android:id="@+id/btnView"
        android:layout_width="0.5dp"
        android:layout_height="@dimen/button_height"
        android:background="@color/line_button_color" />

          <Button
              android:id="@+id/btncanel"
              android:layout_width="0dp"
              android:text="@string/btn_close"
              android:layout_height="@dimen/button_height"
              android:layout_weight="1"
              android:background="@color/colorAccent"
              android:textColor="#fff"
              android:textSize="@dimen/text_size_title" />

      </LinearLayout>


</LinearLayout>
    </ScrollView>
