<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_stock_model"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:id="@+id/lnStockModel"
        android:background="@drawable/button_normal_background"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textloaihang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TC020 Thẻ cào 100"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textSize="@dimen/text_size_13"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="#C7C7C0" />

    <TextView
        android:id="@+id/textsoluongkhocaptren"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="15000000"
        android:textSize="@dimen/text_size_13" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="#C7C7C0" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/editdatsoluong"
                android:layout_width="50dp"
                android:layout_height="@dimen/icon_height"
                android:background="@drawable/background_edtitext_click"
                android:gravity="center_vertical|center_horizontal"
                android:text="15000000"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btndelete"
            android:layout_width="@dimen/button_height"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/button_normal_background"
            android:gravity="center"
            android:filterTouchesWhenObscured="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/icon_inner_width"
                android:layout_height="@dimen/icon_inner_width"
                android:scaleType="fitXY"
                android:src="@drawable/delete" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>