<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_10" >

        <LinearLayout
            android:id="@+id/lnHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                style="@style/WizardPageTitle"
                android:text="@string/txt_update_channel_info" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/dividerHorizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="2.5"
                android:text="@string/txt_channel_name" />

            <EditText
                android:id="@+id/edt_ten_diemban"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:maxLength="50"
                android:singleLine="true"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="2.5"
                android:text="@string/txt_phone_number" />

            <EditText
                android:id="@+id/edt_sdt_lienhe"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:inputType="number"
                android:maxLength="12"
                android:singleLine="true"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="2.5"
                android:text="@string/txt_contract_method" />

            <Spinner
                android:id="@+id/spn_hinhthuc_hopdong"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_item_menu"
                android:layout_weight="4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="2.5"
                android:text="@string/txt_point_of_sale" />

            <Spinner
                android:id="@+id/spn_hinhthuc_banhang"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_item_menu"
                android:layout_weight="4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="2.5"
                android:text="@string/txt_bussiness_type" />

            <Spinner
                android:id="@+id/spn_vitri_diemban"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_item_menu"
                android:layout_weight="4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnSogiayto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/lnIdNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center_vertical"
                    android:text="@string/id_number"
                    android:textSize="@dimen/text_size_content" />

                <EditText
                    android:id="@+id/edtIdNumber"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_item_menu"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:hint=""
                    android:maxLength="12"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnDateRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center_vertical"
                    android:text="@string/date_range"
                    android:textSize="@dimen/text_size_content" />

                <EditText
                    android:id="@+id/edtDateRange"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_item_menu"
                    android:layout_weight="0.6"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:drawablePadding="2dp"
                    android:drawableRight="@drawable/calendar_07"
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:longClickable="false"
                    android:text=""
                    android:textSize="@dimen/text_size_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnPlaceGive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center_vertical"
                    android:text="@string/place_give"
                    android:textSize="@dimen/text_size_content" />

                <EditText
                    android:id="@+id/edtPlaceGive"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_item_menu"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:hint=""
                    android:maxLength="50"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_item_menu"
                android:layout_weight="0.4"
                android:gravity="center_vertical"
                android:text="@string/my_wards"
                android:textSize="@dimen/text_size_content" />

            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6"
                android:clickable="true"
                android:cursorVisible="false"
                android:drawablePadding="2dp"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:longClickable="false"
                android:text=""
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ll_main"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="@dimen/margin_10" >

            <Button
                android:id="@+id/btn_cancel_info"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_marginRight="5dp"
                android:layout_weight="1"

                android:gravity="center_vertical|center_horizontal"
                android:text="@string/cancel"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_update_info"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"

                android:gravity="center_vertical|center_horizontal"
                android:text="@string/btn_update"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>