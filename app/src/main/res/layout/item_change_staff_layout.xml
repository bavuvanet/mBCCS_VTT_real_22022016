<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_lin_layout_channel_manager"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imv_staff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txtNameStaff"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/txtDistanceStaff"
                android:singleLine="true"
                android:text="@string/text_5_layout_channel_manager"
                android:textColor="@color/text_title"
                android:textSize="@dimen/text_size_title" />

            <TextView
                android:id="@+id/txtDistanceStaff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/text_title"
                android:textSize="@dimen/text_size_title" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_id_staff"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNameStaff"
            android:layout_toLeftOf="@+id/imv_staff"
            android:singleLine="true"
            android:text="@string/text_5_layout_channel_manager"
            android:textColor="@color/text_nomal"
            android:textSize="@dimen/text_size_title" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imv_staff"
        android:layout_width="@dimen/height_lin_layout_channel_manager"
        android:layout_height="@dimen/height_lin_layout_channel_manager"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>