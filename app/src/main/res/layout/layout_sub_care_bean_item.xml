<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvCusName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phùng Quốc Huy"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCusPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="0965747979" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvGiftName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Mặt hàng" />

    <TextView
        android:id="@+id/tvGiftType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loại quà" />

    <TextView
        android:id="@+id/tvGiftDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Ngày phát" />

    <TextView
        android:id="@+id/tvGiftAllowType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Hình thức tặng" />

    <TextView
        android:id="@+id/tvCareType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_marginTop="3dp"
        android:text="Chương trình" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="3dp"
        android:text="Trạng thái" />
    <TextView
        android:id="@+id/tvReceiverReal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="3dp"
        android:text="Nguwofi nhận thực tế" />

</LinearLayout>