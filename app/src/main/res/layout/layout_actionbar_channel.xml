<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/list_background_pressed_vt" >

    <LinearLayout
        android:id="@+id/relaBackHome"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/lnRight"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imvIconBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back_08" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_text_1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtNameActionbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_header"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtAddressActionbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_title" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnHome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_support"
            />

        <Button
            android:id="@+id/btnSortByCareAsc"
            android:layout_width="27dp"
            android:layout_height="26dp"
            android:background="@drawable/fail"
            android:visibility="gone" 
            android:layout_marginRight="@dimen/margin_text_5"
            />

        <Button
            android:id="@+id/btnSortByCareDesc"
            android:layout_width="25dp"
            android:layout_height="26dp"
            android:background="@drawable/checkbox_star_background"
            android:visibility="gone" 
            android:layout_marginRight="@dimen/margin_text_5"
            
            />
        <Button
            android:id="@+id/btnMap"
            android:layout_width="15dp"
            android:layout_height="26dp"
            android:background="@drawable/background_button_map"
            android:visibility="gone"
            android:layout_marginRight="@dimen/margin_20"
             />
    </LinearLayout>

</RelativeLayout>