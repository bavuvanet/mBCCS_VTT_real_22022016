<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_stock_model"
    android:background="@drawable/button_normal_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/tvStockModelCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TC020"
                android:textSize="@dimen/text_size_nomal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvStockModelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="The cao MG20"
                android:textSize="@dimen/text_size_nomal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/imgStock"
                        android:layout_width="@dimen/lv_icon_width"
                        android:layout_height="@dimen/lv_icon_height"
                        android:src="@drawable/stock" />

                    <TextView
                        android:id="@+id/tvQuantityIssue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="150"
                        android:textSize="@dimen/text_size_nomal" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvQuantitySaling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_normal_background"
                    android:hint="@string/salingQuantity"
                    android:textSize="@dimen/text_size_nomal" >
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvSerialWarring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mustInputSerial"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_little" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgDelete"
        android:filterTouchesWhenObscured="true"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:src="@drawable/delete" />

</LinearLayout>