<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_lin_serial"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/margin_text_1"
    android:paddingRight="@dimen/margin_text_1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvSerial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345678901234567890 - 12345678901234567890"
            android:textSize="@dimen/text_size_content" />
    </LinearLayout>

    <View
        android:id="@+id/lineView"
        android:layout_width="0.1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#d0d0d0" />

    <LinearLayout
        android:id="@+id/imgDelete"
        android:layout_width="@dimen/height_lin_serial"
        android:layout_height="match_parent"
        android:filterTouchesWhenObscured="true"
        android:background="@drawable/button_normal_background"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/icon_inner_width"
            android:layout_height="@dimen/icon_inner_width"
            android:scaleType="fitXY"
            android:src="@drawable/delete" />
    </LinearLayout>

</LinearLayout>