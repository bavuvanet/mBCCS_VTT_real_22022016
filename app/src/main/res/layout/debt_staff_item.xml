<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_margin_half"
        android:paddingTop="@dimen/activity_margin_half"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tvDebtType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:maxLines="1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="tvDebtType"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNeedConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingLeft="@dimen/activity_margin_half_and_half"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="needConfirm" />

        <TextView
            android:id="@+id/tvConfirmed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingLeft="@dimen/activity_margin_half_and_half"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="confirmed" />

        <TextView
            android:id="@+id/tvDifferent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingLeft="@dimen/activity_margin_half_and_half"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="tvDifferent" />
        <TextView
            android:id="@+id/tvReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingLeft="@dimen/activity_margin_half_and_half"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="tvReason" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_keyboard_arrow_right_48pt" />
</LinearLayout>