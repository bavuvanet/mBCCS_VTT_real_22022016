<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_text_5">

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edtSearchNode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_connector"
        android:textSize="@dimen/text_size_15"
        android:drawableRight="@drawable/search_c" />
    <TextView
        android:paddingTop="@dimen/margin_5"
        android:paddingBottom="@dimen/margin_5"
        android:layout_width="match_parent"
        android:textColor="@color/bg_tv_vt"
        android:text="@string/listConnector"
        android:layout_height="wrap_content"
        />
    <ListView
        android:id="@+id/lvNode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>