<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="@string/phone_number"
                android:textSize="@dimen/text_size_content" />

            <EditText
                android:id="@+id/edt_isdn"
                android:layout_width="0dip"
                android:layout_height="@dimen/height_spinner"
                android:layout_weight="6"
                android:inputType="number" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="@string/txt_money_charge_require"
                android:textSize="@dimen/text_size_content" />

            <EditText
                android:id="@+id/edt_amount"
                android:layout_width="0dip"
                android:layout_height="@dimen/height_spinner"
                android:layout_weight="6" 
                android:inputType="numberSigned"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="@string/password_require"
                android:textSize="@dimen/text_size_content" />

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="0dip"
                android:layout_height="@dimen/height_spinner"
                android:layout_weight="6" 
                android:inputType="textPassword"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_bootom_component"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_anypay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"

                android:filterTouchesWhenObscured="true"
                android:text="@string/exchange_anypay"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_content" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>