<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Mã hộ dân"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvmahd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:textStyle="bold|italic" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Tên hộ dân" />

            <TextView
                android:id="@+id/tvtenhd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Số ĐT" />

            <TextView
                android:id="@+id/tvphone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Địa chỉ" />

            <TextView
                android:id="@+id/tvarea"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/imgEdit"
        android:layout_width="@dimen/button_delete_height"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/button_normal_background"
        android:filterTouchesWhenObscured="true"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/icon_inner_width"
            android:layout_height="@dimen/icon_inner_width"
            android:scaleType="fitXY"
            android:src="@drawable/editor" />
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="#C7C7C0" />

    <LinearLayout
        android:id="@+id/imgDelete"
        android:layout_width="@dimen/button_delete_height"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/button_normal_background"
        android:filterTouchesWhenObscured="true"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/icon_inner_width"
            android:layout_height="@dimen/icon_inner_width"
            android:scaleType="fitXY"
            android:src="@drawable/delete" />
    </LinearLayout>

</LinearLayout>