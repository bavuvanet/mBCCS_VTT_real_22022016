<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_litter"
            android:gravity="center_vertical"
            android:text="HD_Hợp đồng"
            android:textSize="@dimen/text_size_content"
            android:textStyle="bold"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/imgUploadImage"
        android:layout_width="@dimen/icon_height_layout_channel_manager"
        android:layout_height="@dimen/icon_height_layout_channel_manager"
        android:layout_marginRight="@dimen/margin_16"
        android:background="@drawable/logo_vt"
        android:contentDescription="@string/desc_list_item_icon"/>

    <LinearLayout
        android:id="@+id/lnDelete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_delete"/>
    </LinearLayout>


</LinearLayout>