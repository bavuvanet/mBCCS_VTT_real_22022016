<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#B9B5B5"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/d1"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_5"
            android:paddingTop="@dimen/margin_5"
            android:text="@string/tv_stock_name"
            android:textColor="@color/white"/>

        <View
            android:layout_width="@dimen/view_size"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/color_view"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/d2"
            android:gravity="center"
            android:text="@string/tv_quantity"
            android:textColor="@color/white"/>

        <View
            android:layout_width="@dimen/view_size"
            android:layout_height="match_parent"
            android:background="@color/color_view"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/d3"
            android:gravity="center"
            android:text="@string/tv_amount"
            android:textColor="@color/white"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_view_history_sale_trans_details"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@android:color/transparent">
    </ListView>
</LinearLayout>