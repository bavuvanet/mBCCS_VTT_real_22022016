<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_normal_background"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvImei"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/margin_text_5"
                android:text="IMEI: 8652365865526365"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/cbSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <RadioButton
                android:id="@+id/rbSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvSerial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_text_5"
            android:text="Serial: 8652365865526365"
            android:textSize="@dimen/text_size_14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvDeviceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_text_5"
            android:text="Tên thiết bị: 8652365865526365"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tvWarrantyDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_text_5"
            android:text="Thời gian bảo hành: 8652365865526365"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_text_5"
            android:text="Khách hàng: 8652365865526365"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tvIsdn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_text_5"
            android:text="Điện thoại: 8652365865526365"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_text_5"
            android:text="Địa chỉ: 8652365865526365"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tvReceiveNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_text_5"
            android:text="Mã phiếu tiếp nhận: 8652365865526365"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tvReceiveDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_text_5"
            android:text="Ngày tiếp nhận: 8652365865526365"
            android:textSize="@dimen/text_size_14" />
        <TextView
            android:id="@+id/tvChannelCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_text_5"
            android:text="Mã kênh tiếp nhận: h004_ftth"
            android:textSize="@dimen/text_size_14" />
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_text_5"
            android:text="Trạng thái:"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tvError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_text_5"
            android:text="Mô tả lỗi:"
            android:textSize="@dimen/text_size_14" />

        <LinearLayout
            android:id="@+id/lnEdtError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_warranty_error_description" />

            <EditText
                android:id="@+id/edtError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_text_5"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/dark_slate_gray"
            android:paddingTop="@dimen/margin_text_5" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/imgDelete"
        android:layout_width="@dimen/button_delete_height"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/button_normal_background"
        android:gravity="center"
        android:layout_gravity="center"
        android:filterTouchesWhenObscured="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/icon_inner_width"
            android:layout_height="@dimen/icon_inner_width"
            android:scaleType="fitXY"
            android:src="@drawable/delete" />
    </LinearLayout>


</LinearLayout>