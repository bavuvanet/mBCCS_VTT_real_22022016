<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_left"
    android:paddingRight="@dimen/padding_right" >

    <LinearLayout
        android:id="@+id/lnIsdn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_item_menu"
            android:gravity="center_vertical"
            android:text="@string/require_isdn"
            android:textSize="@dimen/text_size_content" />

        <EditText
            android:id="@+id/edtIsdn"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp50"
            android:layout_gravity="left|center_vertical|center_horizontal"
            android:layout_weight="1"
            android:hint="@string/sothuebao"
            android:singleLine="true"
            android:textSize="@dimen/text_size_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_item_menu"
            android:gravity="center_vertical"
            android:text="@string/trangthai"
            android:textSize="@dimen/text_size_content" />

        <Spinner
            android:id="@+id/spnStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="3dp"
            android:clickable="true"
            android:cursorVisible="false"
            android:drawablePadding="2dp"
            android:entries="@array/bankplus"
            android:entryValues="@array/bankplus_value"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:longClickable="false"
            android:text=""
            android:textSize="@dimen/text_size_content" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"

        android:filterTouchesWhenObscured="true"
        android:text="@string/search"
        android:textColor="#fff"
        android:textSize="@dimen/text_size_content" />

    <LinearLayout
        android:id="@+id/lnCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_item_menu"
            android:gravity="center_vertical"
            android:text="@string/sohopdong"
            android:textSize="@dimen/text_size_content" />

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="3dp"
            android:clickable="true"
            android:drawablePadding="2dp"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:longClickable="false"
            android:text=""
            android:textSize="@dimen/text_size_content" />
    </LinearLayout>

</LinearLayout>