<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_stock_model"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/lnStockModel"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@drawable/button_normal_background"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvStockModelCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:text="TC020 Thẻ cào 100"
            android:textSize="@dimen/text_size_content_list" />

        <TextView
            android:id="@+id/tvStateTheGood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:text="@string/mustInputSerial" 
            android:textSize="@dimen/text_size_little" />

 

    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="#C7C7C0" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvQuantityIssue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:gravity="center_vertical|right"
            android:text="15"
            android:textSize="@dimen/text_size_quantity" />
    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="#C7C7C0" />

    <LinearLayout
        android:id="@+id/lnQuantity"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvQuantitySaling"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_normal_background"
                android:gravity="center"
                android:text="@string/input_number_return"
                android:textColor="@color/green_app"
                android:textSize="@dimen/text_size_quantity" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/imgDelete"
            android:layout_width="@dimen/button_delete_height"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/button_normal_background"
            android:filterTouchesWhenObscured="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/icon_inner_width"
                android:layout_height="@dimen/icon_inner_width"
                android:scaleType="fitXY"
                android:src="@drawable/delete" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>