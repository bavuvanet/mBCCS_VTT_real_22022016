<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/historyLayout"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/advisory_custom_boder"
        android:layout_weight="30">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tvAdvisoryHistory"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/bg_view"
                android:gravity="start|center"
                android:textStyle="bold"
                android:text="@string/advisory_history_text"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/btExpandAdvHistory"
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:background="@color/white"
                android:src="@drawable/down"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_1"/>
        <ListView
            android:id="@+id/lvHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dataLayout"
        android:layout_margin="2dp"
        android:background="@drawable/advisory_custom_boder"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tvDataPk"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/bg_view"
                android:gravity="start|center"
                android:textStyle="bold"
                android:text="@string/advisory_data_packet_use_text"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tvDataPkValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tvDataPk"
                android:layout_toLeftOf="@+id/btExpandDataPk"
                android:gravity="center"
                android:textColor="@color/bg_view"
                android:padding="0dp"
                android:textStyle="bold"
                android:text="MIMAX"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/btExpandDataPk"
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:background="@color/white"
                android:src="@drawable/down"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_1"/>
        <TableRow
            android:id="@+id/trDataPackCurrent2"
            android:layout_below="@+id/trDataPackCurrent1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvDateRegister"
                android:layout_weight="1"
                android:gravity="start"
                android:paddingLeft="0dp"
                android:text="Ngày đăng ký:"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/tvDateRegisterValue"
                android:layout_weight="1"
                android:gravity="start"
                android:padding="0dp"
                android:text="12/08/2017"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/tvDateExtend"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="0dp"
                android:text="Ngày gia hạn:"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/tvDateExtendValue"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="0dp"
                android:text="18/01/2018"
                android:textSize="13sp" />
        </TableRow>

        <ListView
            android:id="@+id/lvData"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/phoneLayout"
        android:layout_margin="2dp"
        android:background="@drawable/advisory_custom_boder"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tvPhonePk"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:textColor="@color/bg_view"
                android:textStyle="bold"
                android:text="@string/advisory_phone_packet_use_text"
                android:textSize="14sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tvPhonePkValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tvPhonePk"
                android:layout_toLeftOf="@+id/btExpandPhonePk"
                android:gravity="center"
                android:textColor="@color/bg_view"
                android:padding="0dp"
                android:textStyle="bold"
                android:text="V70"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/btExpandPhonePk"
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:background="@color/white"
                android:src="@drawable/down"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_1"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:gravity="start"
                android:padding="0dp"
                android:text="Ngày đăng ký:"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/tvDateRegPhoneValue"
                android:layout_weight="1"
                android:gravity="start"
                android:padding="0dp"
                android:text="12/08/2017"
                android:textSize="13sp" />
            <TextView
                android:layout_weight="1"
                android:gravity="end"
                android:padding="0dp"
                android:text="Ngày gia hạn:"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/tvDateExtPhoneValue"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="0dp"
                android:text="18/01/2018"
                android:textSize="13sp" />
        </TableRow>
        <ListView
            android:id="@+id/lvPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>