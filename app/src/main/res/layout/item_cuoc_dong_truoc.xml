<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="5dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="@integer/d5"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Số tháng cước đóng trước" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="2dp"
            android:tag="@string/siTagQuanLyKetCuoi"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:background="?android:attr/editTextBackground"
            android:textColor="?android:attr/editTextColor"
            android:layout_weight="@integer/d4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="@integer/d5"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Số tiền đóng trước 1 tháng" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="2dp"
            android:tag="@string/siTagQuanLyKetCuoi"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:background="?android:attr/editTextBackground"
            android:textColor="?android:attr/editTextColor"
            android:layout_weight="@integer/d4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="@integer/d5"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Tổng số tiền" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="2dp"
            android:tag="@string/siTagQuanLyKetCuoi"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:background="?android:attr/editTextBackground"
            android:textColor="?android:attr/editTextColor"
            android:layout_weight="@integer/d4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="@integer/d5"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Đơn giá" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="2dp"
            android:tag="@string/siTagQuanLyKetCuoi"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:background="?android:attr/editTextBackground"
            android:textColor="?android:attr/editTextColor"
            android:layout_weight="@integer/d4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="@integer/d5"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Giảm trừ cước từ tháng" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="2dp"
            android:tag="@string/siTagQuanLyKetCuoi"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:background="?android:attr/editTextBackground"
            android:textColor="?android:attr/editTextColor"
            android:layout_weight="@integer/d4"/>

    </LinearLayout>

</LinearLayout>