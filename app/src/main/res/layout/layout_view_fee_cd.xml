<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_s"
        android:background="@color/bg_tv_vt"
        android:gravity="center" >

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#00897b" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/tenphi"
            android:textColor="#fff" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/line_button_color" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/giaphi"
            android:textColor="#fff" />
    </LinearLayout>
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.78"
        />
    <TextView
        android:id="@+id/tvSummoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/summoney"
        android:textSize="15dp"
        android:textColor="@color/bg_tv_vt" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/confirm_connect_sub"
        android:textSize="15dp"
        android:textColor="@color/bg_tv_vt" />
    <LinearLayout
        android:id="@+id/lnButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_lin_layout_channel_manager"
        android:gravity="center"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/btnok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_s"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_weight="1"

            android:text="@string/OK"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_title"
            android:visibility="visible" />
        <Button
            android:id="@+id/btncancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_s"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_weight="1"

            android:text="@string/cancel"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_title"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>