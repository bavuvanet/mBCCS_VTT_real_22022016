<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/bg_tv_vt"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingLeft="5dp"
        android:paddingTop="12dp"
        android:text="@string/tim_don_vi"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <RelativeLayout
        android:id="@+id/reMaDonVi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvNgayBd"
            android:layout_width="@dimen/width_register_don_vi"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/ma_don_vi" />

        <EditText
            android:id="@+id/edtMaDonVi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/tvNgayBd"
            android:gravity="center_vertical"
            android:paddingLeft="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reTenDonVi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/reMaDonVi"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv"
            android:layout_width="@dimen/width_register_don_vi"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/ten_don_vi" />

        <EditText
            android:id="@+id/edtTenDonVi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/tv"
            android:gravity="center_vertical"
            android:paddingLeft="10dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnTimKiem"
        android:layout_width="@dimen/width_btn_dialog"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reTenDonVi"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dip"
        android:background="@color/colorAccent"
        android:text="@string/btn_search"
        android:textColor="@color/white" />

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/btnTimKiem"
        android:background="@color/black" />

    <ListView
        android:id="@+id/lvLockBoxInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dip" >
    </ListView>

</RelativeLayout>